{
  "KestrelPort": 5000,
  "AzureManagedIdentityClientId": "identity-server-mi",
  "AzureAppConfigurationUri": "https://boardz-appconfig.azconfig.io",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Urls": "https://localhost:5000",
  "UI": {
    "Login": "http://localhost:3000/login.html",
    "Logout": "http://localhost:3000/logout.html",
    "Error": "http://localhost:3000/login-error"
  },
  "AllowedCorsOrigins": [
    "http://localhost:3000",
    "https://localhost:5001"
  ],
  "BaseUri": "https://localhost:5000", // could we remove Urls?
  "IdentityServer": {
    "ApiResources": [
      {
        "Name": "game-api",
        "DisplayName": "Game API",
        "Scopes": [
          {
            "Name": "game-api",
            "DisplayName": "Game API"
          }
        ]
      }
    ],
    "Clients": [
      {
        "Enabled": true,
        "ClientId": "js",
        "ClientName": "JavaScript Client",
        "AllowedGrantTypes": [ "authorization_code" ],
        "RequirePkce": true,
        "RequireClientSecret": false,
        "RequireConsent": false,
        "AlwaysIncludeUserClaimsInIdToken": true,
        "AllowOfflineAccess": true,
        "AccessTokenLifetime": 3600, // 1 hour
        "AbsoluteRefreshTokenLifetime": 2592000, // 30 days
        "SlidingRefreshTokenLifetime": 1296000, // 15 days
        "RefreshTokenUsage": "OneTimeOnly",
        "UpdateAccessTokenClaimsOnRefresh": true,
        "AllowAccessTokensViaBrowser": true,

        "RedirectUris": [ "http://localhost:3000/login-callback", "http://localhost:3000/silent_renew.html" ],
        "PostLogoutRedirectUris": [ "http://localhost:3000" ],
        "AllowedCorsOrigins": [ "http://localhost:3000" ],

        "AllowedScopes": [
          "openid",
          "profile",
          "game-api",
          "offline_access" // so we can use refresh_tokens to request new access_tokens
        ]
      },
      {
        "Enabled": true,
        "ClientId": "game-service-swagger",
        "ClientName": "Swagger UI for Game service",
        "AllowedGrantTypes": [ "authorization_code" ],
        "RequirePkce": true,
        "RequireClientSecret": false,
        "RequireConsent": false,
        "AlwaysIncludeUserClaimsInIdToken": true,
        "AllowOfflineAccess": true,
        "AccessTokenLifetime": 3600, // 1 hour
        "AbsoluteRefreshTokenLifetime": 2592000, // 30 days
        "SlidingRefreshTokenLifetime": 1296000, // 15 days
        "RefreshTokenUsage": "OneTimeOnly",
        "UpdateAccessTokenClaimsOnRefresh": true,
        "AllowAccessTokensViaBrowser": true,
        "RedirectUris": [ "https://localhost:5001/swagger/oauth2-redirect.html" ],
        "AllowedCorsOrigins": [ "https://localhost:5001" ],
        "AllowedScopes": [
          "openid",
          "profile",
          "game-api",
          "offline_access"
        ]
      }
    ]
  }
}
